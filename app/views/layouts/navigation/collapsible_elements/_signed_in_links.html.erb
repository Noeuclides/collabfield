<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
  <a href="#" class="flex items-center">
    <img src="https://flowbite.com/docs/images/logo.svg" class="h-8 mr-3" alt="Flowbite Logo" />
    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Collabfield</span>
  </a>
  <div class="flex justify-between">
    <div id="user-name" class='py-2 px-2 font-medium text-white rounded hover:text-blue-700 md:dark:hover:bg-transparent'>
      <%= current_user.name %>
    </div>
    <!-- Secondary Navbar items -->
    <div class="hidden md:flex items-center space-x-3 ">
      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'py-2 px-2 font-medium text-white rounded hover:text-blue-700 md:dark:hover:bg-transparent' %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'py-2 px-2 font-medium text-white rounded hover:text-blue-700 md:dark:hover:bg-transparent' %>
    </div>

    <!-- Mobile menu button -->
    <div class="md:hidden flex items-center">
      <button class="outline-none mobile-menu-button">
        <svg class=" w-6 h-6 text-gray-500 hover:text-green-500 "
             x-show="!showMenu"
             fill="none"
             stroke-linecap="round"
             stroke-linejoin="round"
             stroke-width="2"
             viewBox="0 0 24 24"
             stroke="currentColor"
        >
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

  </div>
</div>
<!-- mobile menu -->
<div class="hidden mobile-menu">
  <ul class="">
    <li class="active">
      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'py-2 px-2 font-medium text-white rounded hover:text-blue-700 md:dark:hover:bg-transparent' %>
    </li>
    <li>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'py-2 px-2 font-medium text-white rounded hover:text-blue-700 md:dark:hover:bg-transparent' %>
    </li>
  </ul>
</div>